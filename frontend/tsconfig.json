{
    "compilerOptions": {
        "rootDir": "app",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./compiled",
        "jsx": "react"
    },
    "include": [
        "app/code/client/**/*",
        "app/code/servers/**/*",
        "app/configs/manual-typings/autoprefixer.d.ts",
        "app/configs/manual-typings/webpack.d.ts",
        "app/configs/configuration.ts",
        "app/configs/webpack/universal-webpack-settings.ts",
        "app/configs/webpack/webpack-dev-server.entry.ts",
        "app/configs/webpack/webpack-dev-server.ts",
        "app/configs/webpack/webpack.config.client.development.ts",
        "app/configs/webpack/webpack.config.client.ts",
        "app/configs/webpack/webpack.config.client.production.entry.ts",
        "app/configs/webpack/webpack.config.client.production.ts",
        "app/configs/webpack/webpack.config.ts",
        "app/configs/webpack/webpack.config.server.development.entry.ts",
        "app/configs/webpack/webpack.config.server.development.ts",
        "app/configs/webpack/webpack.config.server.ts",
        "app/configs/webpack/webpack.config.server.production.entry.ts",
        "app/configs/webpack/webpack.config.server.production.ts"
    ]
}
